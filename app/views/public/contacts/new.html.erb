<div class="container">
  <div class="row">
    <div class="col mt-5">
      <h5 class="mx-auto about-text">お問い合わせフォーム</h5>
    </div>
  </div>
  <%= form_with model: @contact,url: confirm_path,method: :post,local: true do |f| %>
    <div class="row">
      <div class="mx-auto col-12 col-md-8 col-lg-6 mt-4">
        <div class="form-group">
          <%= f.label:お名前 %>
          <%= f.text_field :name,:placeholder=>"お名前", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label:本文 %>
          <%= f.text_area :text, rows: 5, :placeholder=>"お問い合わせ本文", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label:返信用メールアドレス %>
          <%= f.text_field :email,:placeholder=>"sample@sample.com", class: "form-control" %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="mx-auto mt-3 mb-5">
        <%= f.submit"入力内容確認" ,class: "btn btn-edit" %>
      </div>
    </div>
  <% end %>
</div>