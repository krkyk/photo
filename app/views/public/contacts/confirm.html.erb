<div class="container">
  <div class="row">
    <div class="col mt-5">
      <h5 class="mx-auto">お問い合わせ内容確認</h5>
    </div>
  </div>
  <%= form_with model: @contact,url: contacts_path,method: :post,local: true do |f| %>
    <div class="row">
      <div class="mx-auto col-12 col-md-8 col-lg-6 mt-5">
        <table class="table table-borderless">
          <tbody>
            <tr>
              <h6 class="inquiry-title">《お名前》</h6>
              <p class="inquiry-text ml-3"><%= @contact.name %>様</p>
            </tr>
            <tr>
              <h6 class="inquiry-title">《本文》</h6>
              <p class="inquiry-text ml-3"><%= @contact.text %></p>
            </tr>
            <tr>
              <h6 class="inquiry-title">《返信用メールアドレス》</H6>
              <P class="inquiry-text ml-3"><%= @contact.email %></P>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
    <div class="row">
      <div class="mx-auto mb-5">
        <%= f.hidden_field :name %>
        <%= f.hidden_field :text %>
        <%= f.hidden_field :email %>
        <%= button_tag type: "submit", "data-confirm"=>"この内容で送信しますか？", class: "btn btn-post" do %>
          <i class="fas fa-mail-bulk"></i> お問い合わせ送信
        <% end %>
     </div>
    </div>
  <% end %>
</div>