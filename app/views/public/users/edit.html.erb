<div class="container">
  <div class="row">
    <div class="col">
      <h2 class="my-3">Edit My Page</h2>
    </div>
  </div>
  <%= form_with model: @user, url: user_path(@user),method: :patch,local:true do |f| %>
    <div class="row">
      <div class="mx-auto col-10 col-md-6 col-lg-5 mt-3">
        <div class="form-group">
          <%= f.label :画像 %><br>
          <%=  f.file_field :user_image, accept: 'image/*' %>
        </div>
      </div>
      <div class="mx-auto col-10 col-md-6 col-lg-5 pt-lg-5 pt-md-5">
        <div class="form-group">
          <%= f.label :ニックネーム %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :メールアドレス %>
          <%= f.email_field :email, class: "form-control" %>
        </div>
        <div class="form-group my-5 pt-lg-3 text-right">
          <%= f.submit" 更新する ",class: "btn btn-success" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
