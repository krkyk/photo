<div class="container">
  <div class="row">
    <div class="col">
      <h2 class="my-3 about-text">会員一覧</h2>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <table class="table table-hover mb-5 mt-2">
        <thead>
          <tr>
            <th></th>
            <th>ニックネーム</th>
          </tr>
        </thead>
        <% @users.each do |user| %>
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(user.id) do %>
                <%= image_tag user.get_user_image(50,50) %>
              <% end %>
            </td>
            <td><%= link_to user.name, user_path(user.id) %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>