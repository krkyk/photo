<div class="container">
  <div class="row">
    <div class="col">
      <h2 class="my-3">New Post</h2>
    </div>
  </div>
  <%= form_with model: @post, url: posts_path,method: :post,local:true do |f| %>
    <div class="row">
      <div class="mx-auto col-10 col-md-6 col-lg-5 mt-3">
        <div class="form-group">
          <%= f.label :画像 %><br>
          <%=  f.file_field :post_image, accept: 'image/*' %>
        </div>
      </div>
      <div class="mx-auto col-10 col-md-6 col-lg-5 pt-lg-5 pt-md-5">
        <div class="form-group">
          <%= f.label :タイトル %>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :テキスト %>
          <%= f.text_area :text, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :address, '場所' %>
          <%= f.text_field :address, class: 'form-control' %>
        </div>
        <div class="form-group my-5 pt-lg-3 text-right">
          <%= f.submit"投稿する",class: "btn btn-success" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
