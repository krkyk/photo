<% comments.each do |comment|%>
<tr>
  <td>
    <%=link_to user_path(comment.user) do %>
    <%= comment.user.name %>
    <%end%>
  </td>
  <td><%= comment.comment %></td>
  <td>
    <% if comment.user==current_user %>
    <%= link_to "削除",post_comment_path(comment.post,comment),method: :delete,remote:true,class: "btn btn-sm btn-danger"%>
    <% end %>
  </td>
</tr>
<% end %>