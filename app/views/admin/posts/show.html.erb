<div class="container">
  <div class="row">
    <div class="col">
      <h2 class="my-3">Post</h2>
    </div>
  </div>
  <div class="row">
    <div class="mx-auto col-10 col-md-6 col-lg-5 mt-3">
      <%= image_tag @post.get_post_image(500,500),class: "post-image mb-3" %>
    </div>
    <div class="mx-auto col-10 col-md-6 col-lg-5 pt-lg-5 pt-md-5">
      <h3 class="post-title">
        <%= @post.title %>
      </h3>
      <h4 class="post-text">
        <%= @post.text %>
      </h4>
      <div class="form-group my-5 pt-lg-3 text-right">
        <%= link_to"削除する",admin_post_path(@post.id),method: :delete,"data-confirm"=>"本当に削除しますか？",class: "btn  btn-destroy my-5" %>
      </div>
    </div>
  </div>
</div>
